{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "rm -rf *": "deny",
      "rm -rf /*": "deny",
      "sudo *": "ask",
      "git push": "ask",
      "dd if=* of=/dev/*": "deny",
      "mkfs.* /dev/*": "deny",
      ":(){ :|:& };:": "deny"
    },
    "webfetch": "allow"
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["bun", "x", "-y", "@upstash/context7-mcp@latest"],
      "enabled": true
    },
    "octocode": {
      "type": "local",
      "command": ["bun", "x", "-y", "octocode-mcp@latest"],
      "enabled": true
    },
    "gemini-cli": {
      "type": "local",
      "command": ["bun", "x", "-y", "gemini-mcp-tool@latest"],
      "enabled": true
    },
    "codex-cli": {
      "type": "local",
      "command": ["bun", "x", "-y", "codex-mcp-server@latest"],
      "enabled": true
    }
  }
}