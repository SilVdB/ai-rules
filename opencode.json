{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/sse",
      "enabled": true
    },
    "context7": {
      "type": "remote", 
      "url": "https://mcp.context7.com/sse",
      "enabled": true
    },
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/sse", 
      "enabled": true
    },
    "sentry": {
      "type": "remote",
      "url": "https://mcp.sentry.dev/mcp",
      "enabled": true
    },
    "ultracite": {
      "type": "local",
      "command": ["bun", "-y", "mcp-remote", "https://www.ultracite.ai/api/mcp/mcp"],
      "enabled": true
    },
    "playwright": {
      "type": "local", 
      "command": ["bun", "x", "-y", "@playwright/mcp@latest"],
      "enabled": true,
      "environment": {}
    },
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "OpenZeppelinSolidityContracts": {
      "type": "remote",
      "url": "https://mcp.openzeppelin.com/contracts/solidity/mcp",
      "enabled": true
    },
    "octocode": {
      "type": "local",
      "command": ["bun", "x", "-y", "octocode-mcp@latest"],
      "enabled": true,
      "environment": {}
    },
    "DeepGraph-TypeScript-MCP": {
      "type": "local",
      "command": ["bun", "x", "-y", "mcp-code-graph@latest", "microsoft/TypeScript"],
      "enabled": true
    },
    "DeepGraph-React-MCP": {
      "type": "local", 
      "command": ["bun", "x", "-y", "mcp-code-graph@latest", "facebook/react"],
      "enabled": true
    }
  }
}